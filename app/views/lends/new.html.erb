<h1>Book Lending Enrty</h1>

<%= form_for :lend, url: lends_path do |f| %>
  <div>
    <%= f.label :member_id %><br>
    <%= f.text_field :member_id %>
  </div>

  <div>
    <%= f.label :book_code %><br>
    <%= f.text_field :book_code %>
  </div>

  <div>
    <%= f.label :date_of_issue %><br>
    <%= f.date_select :date_of_issue, {:order => [:day, :month, :year], :selected => Date.today} %>
  </div>

  <div>
    <%= f.submit %>
  </div>
<% end %>

<%= link_to "Back", lends_path %>