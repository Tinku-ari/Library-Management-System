<h1>Members</h1>

<%= link_to "Add a new member", new_member_path %>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th colspan="3"></th>
  </tr>

  <% @members.each do |member| %>
    <tr>
      <td><%= member.name %></td>
      <td><%= member.description %></td>
      <td><%= link_to 'Show', member_path(member) %></td>
      <td><%= link_to 'Edit', edit_member_path(member) %></td>
      <td><%= link_to 'Delete', member_path(member), method: :delete, data: {confirm: 'Are you sure?'} %></td>
    </tr>
  <% end %>
</table>
